<body>
    <div id="create-room-container" class="create-room-container">
        <form action="/create-new-room" method="post">
            <button id="create-room-button" class="create-room-button">
                <h3 id="create-room-text" class="create-room-text">
                    Create Room
                </h3>
                <span id="create-room-icon" class="fas fa-plus-square">        
                </span>
            </button>
            <input name="roomName" type="text" maxlength="50" placeholder="Room Name" id="room-name-input">
            <input name="roomDescription" maxlength="300" type="text" placeholder="Room Description" id="room-description-input">
                <!-- Security radios: -->
            <input type="radio" id="open-security-radio" name="securitySetting" value="open">
                <label for="male">Open</label>
            <input type="radio" id="locked-security-radio" name="securitySetting" value="locked">
                    <label for="male">Locked</label>
            <input type="radio" checked id="private-security-radio" name="securitySetting" value="private">
                    <label for="male">Private</label>
        </form>
        
        <label for="sorting-options">Sort by:</label>
        <select name="sorting-options" id="sorting-options">
            <option value="lastUpdated" selected>Last Updated</option>
            <option value="lastCreated">Last Created</option>
            <option value="alphabetical">Name (A-Z)</option>
            <option value="rAlphabetical">Name (Z-A)</option>            
        </select>
        <!-- <button id="create-room-button" class="create-room-button">
            <h1 id="create-room-text" class="create-room-text">
                Create Room
            </h1>
            <span id="create-room-icon" class="fas fa-plus-square">        
            </span>
        </button> -->
    </div>
    <div id="room-list-container" class="room-list-container">
    </div>
    <div id="room-list-controls" class="room-list-controls">
        <button id="refresh-button" class="refresh-button">
            <span id="refresh-icon" class="fas fa-sync-alt"></i></span>
        </button>
    </div>
</body>

<script src="https://kit.fontawesome.com/ab8bbc25ce.js" crossorigin="anonymous"></script>
<script src="jquery-3.5.1.js"></script>
<script defer src="indexScripts.js"></script>
<script>
    Notification.requestPermission()
</script>
</html>